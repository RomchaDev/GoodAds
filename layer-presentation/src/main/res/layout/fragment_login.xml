<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/login_language_english"
            android:textColor="#c4c4c4"
            android:textSize="14sp"
            app:drawableEndCompat="@drawable/ic_arrow"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingStart="28dp"
            android:paddingEnd="28dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="52dp"
                android:adjustViewBounds="true"
                android:src="@color/cardview_dark_background"
                tools:ignore="ContentDescription" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/et_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:hint="@string/username_hint"
                app:layout_constraintEnd_toEndOf="@+id/logo_text"
                app:layout_constraintStart_toStartOf="@+id/logo_text"
                app:layout_constraintTop_toBottomOf="@+id/username_text">

                <com.google.android.material.textfield.TextInputEditText
                    style="@style/EditTextPrimary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_edit_text" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:hint="@string/password_hint"
                app:endIconMode="password_toggle"
                app:layout_constraintEnd_toEndOf="@+id/logo_text"
                app:layout_constraintStart_toStartOf="@+id/logo_text"
                app:layout_constraintTop_toBottomOf="@+id/username_text">

                <com.google.android.material.textfield.TextInputEditText
                    style="@style/EditTextPrimary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_edit_text"
                    android:inputType="textPassword" />

            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:baselineAligned="false">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/et_post_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="4dp"
                    android:layout_weight="1"
                    android:hint="@string/post_price_hint"
                    app:layout_constraintEnd_toEndOf="@+id/logo_text"
                    app:layout_constraintStart_toStartOf="@+id/logo_text"
                    app:layout_constraintTop_toBottomOf="@+id/username_text">

                    <com.google.android.material.textfield.TextInputEditText
                        style="@style/EditTextPrimary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:background="@drawable/bg_edit_text" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/et_story_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="16dp"
                    android:layout_weight="1"
                    android:hint="@string/story_price_hint"
                    app:layout_constraintEnd_toEndOf="@+id/logo_text"
                    app:layout_constraintStart_toStartOf="@+id/logo_text"
                    app:layout_constraintTop_toBottomOf="@+id/username_text">

                    <com.google.android.material.textfield.TextInputEditText
                        style="@style/EditTextPrimary"
                        android:layout_width="match_parent"
                        android:inputType="number"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_edit_text" />

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

            <Button
                android:id="@+id/btn_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:backgroundTint="#3897f0"
                android:padding="12dp"
                android:text="@string/login_button_text"
                android:textAllCaps="false"
                android:textColor="@color/white"
                app:cornerRadius="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/forgot_login"
                android:textSize="12sp" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>