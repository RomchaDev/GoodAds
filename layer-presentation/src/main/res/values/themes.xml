<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GoodAds" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="EditTextPrimary">

        <item name="android:minHeight">48dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:background">@drawable/bg_edit_text</item>
    </style>

    <style name="smallImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>

    <style name="DescriptionTextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/gray_dark</item>
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/roboto_regular</item>
    </style>

    <style name="ItemSupportTextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/purple_light</item>
        <item name="android:textSize">11sp</item>
        <item name="fontFamily">@font/roboto_regular</item>
    </style>

    <style name="HeaderTextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/black_dark</item>
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/roboto_bold</item>
    </style>

    <style name="SubHeaderTextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/black_dark</item>
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/roboto_medium</item>
    </style>

    <style name="AppButton">
        <item name="android:background">@color/purple_light</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ActiveInactiveViewStyle">
        <item name="android:layout_width">@dimen/layout_width_active_inactive_button</item>
        <item name="android:layout_height">@dimen/layout_height_active_inactive_button</item>
        <item name="animated">true</item>
        <item name="android:layout_marginTop">@dimen/layout_marginTop_active_inactive_button</item>
        <item name="container_color">@color/white</item>
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="buttonView_color">@color/purple_light</item>
        <item name="active_text_size">@dimen/active_text_size_active_inactive_button</item>
        <item name="active_paddingBot">@dimen/active_paddingBot_active_inactive_button</item>
        <item name="active_paddingEnd">@dimen/active_paddingEnd_active_inactive_button</item>
        <item name="active_text_color">@color/black</item>
        <item name="inactive_text_size">@dimen/inactive_text_size_active_inactive_button</item>
        <item name="inactive_paddingBot">@dimen/inactive_paddingBot_active_inactive_button</item>
        <item name="inactive_paddingEnd">@dimen/inactive_paddingEnd_active_inactive_button</item>
        <item name="inactive_text_color">@color/white</item>
        <item name="elevation">@dimen/elevation_active_inactive_button</item>
        <item name="radius">@dimen/radius_active_inactive_button</item>
        <item name="cardCornerRadius">@dimen/radius_active_inactive_button</item>

    </style>

</resources>