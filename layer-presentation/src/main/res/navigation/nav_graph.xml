<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="org.romeo.layer_presentation.main.login.LoginFragment"
        android:label="LoginFragment">
        <action
            android:id="@+id/action_loginFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/homeFragment"
        android:name="org.romeo.layer_presentation.main.home.HomeFragment"
        android:label="HomeFragment" />
    <fragment
        android:id="@+id/chooseAdFragment"
        android:name="org.romeo.layer_presentation.main.choose_ad_screen.ChooseAdFragment"
        android:label="ChooseAdFragment" />
    <action
        android:id="@+id/action_global_chooseAdFragment"
        app:destination="@id/chooseAdFragment" />

</navigation>