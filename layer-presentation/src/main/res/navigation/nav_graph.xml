<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="org.romeo.layer_presentation.main.login.LoginFragment"
        android:label="LoginFragment">
        <action
            android:id="@+id/action_loginFragment_to_homeFragment"
            app:destination="@id/fragment_home"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/fragment_home"
        android:name="org.romeo.layer_presentation.main.home.HomeFragment"
        android:label="HomeFragment" >
        <action
            android:id="@+id/action_homeFragment_to_usersFragment"
            app:destination="@id/fragment_users" />
        <action
            android:id="@+id/action_fragment_home_to_requestsFragment2"
            app:destination="@id/fragment_requests" />
    </fragment>
    <fragment
        android:id="@+id/chooseAdFragment"
        android:name="org.romeo.layer_presentation.main.choose_ad_screen.ChooseAdFragment"
        android:label="ChooseAdFragment" />
    <action
        android:id="@+id/action_global_chooseAdFragment"
        app:destination="@id/chooseAdFragment" />
    <fragment
        android:id="@+id/fragment_users"
        android:name="org.romeo.layer_presentation.main.users.UsersFragment"
        android:label="UsersFragment" />
    <fragment
        android:id="@+id/fragment_requests"
        android:name="org.romeo.layer_presentation.main.ad_requests.RequestsFragment"
        android:label="RequestsFragment" />

</navigation>